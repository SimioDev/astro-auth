---
import { SignedIn, SignedOut, UserButton, SignInButton } from "@clerk/astro/components";
---
<div class="container flex flex-row items-center justify-between">
	<div class="presentation">
		<p class="text-2xl font-bold text-white">Welcome to Astro Auth</p>
		<p class="text-white">By: SimioDev</p>
		<div class="clerk-section mt-3">
			<SignedIn>
				<UserButton />
			</SignedIn>
			<SignedOut>
				<SignInButton mode="modal" class="text-white bg-gradient-to-r from-green-400 via-green-500 to-green-600 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-green-300 dark:focus:ring-green-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2"/>
			</SignedOut>
		</div>
	</div>
</div>